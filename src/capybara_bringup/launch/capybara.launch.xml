<launch>
    <!-- ==================== ARGUMENTS ==================== -->
    <arg name="use_mock_hardware" default="true" />
    <arg name="launch_rviz" default="true" />
    <arg name="launch_zed" default="true" />
    <arg name="launch_lidar" default="false" />
    <arg name="use_joystick" default="false" description="Use teleop_twist_joy (true) or teleop_twist_keyboard (false)" />
    <arg name="launch_gps" default="true" description="Launch u-blox ZED-F9P GPS node (publishes /fix for ZED GNSS fusion)" />

    <!-- ==================== PATHS ==================== -->
    <let name="urdf_path"
         value="$(find-pkg-share capybara_description)/urdf/capybara.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share capybara_description)/rviz/urdf_config.rviz" />

    <!-- ==================== ROBOT STATE PUBLISHER ==================== -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path) use_mock_hardware:=$(var use_mock_hardware)')" />
    </node>

    <!-- ==================== ROS2 CONTROL ==================== -->
    <node pkg="controller_manager" exec="ros2_control_node" output="screen">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path) use_mock_hardware:=$(var use_mock_hardware)')" />
        <param from="$(find-pkg-share capybara_bringup)/config/capybara_controllers.yaml" />
    </node>

    <!-- Spawners for controllers -->
    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="diff_drive_controller" />

    <!-- ==================== ZED2i CAMERA ==================== -->
    <group if="$(var launch_zed)">
        <include file="$(find-pkg-share zed_wrapper)/launch/zed_camera.launch.py">
            <arg name="camera_model" value="zed2i" />
            <arg name="publish_urdf" value="true" />
            <arg name="publish_tf" value="true" />
            <arg name="publish_map_tf" value="false" />
        </include>
    </group>

    <!-- ==================== LIDAR (STL-19P) ==================== -->
    <!-- Used by capybara_slam.launch.py (launch_lidar:=true).           -->
    <!-- Nav2 launches manage their own scan source:                      -->
    <!--   capybara_nav2_simple.launch.py  — launches LIDAR directly      -->
    <!--   capybara_nav2_zed.launch.py     — uses pointcloud_to_laserscan -->
    <group if="$(var launch_lidar)">
        <node pkg="sllidar_ros2" exec="sllidar_node" name="sllidar_node" output="screen">
            <param name="serial_port" value="/dev/ttyUSB0" />
            <param name="serial_baudrate" value="38400" />
            <param name="frame_id" value="laser_frame" />
            <param name="scan_mode" value="Standard" />
        </node>
    </group>

    <!-- ==================== GPS (u-blox ZED-F9P via USB) ==================== -->
    <!-- Publishes NavSatFix to /fix — ZED SDK fuses it via gnss_fusion_enabled.  -->
    <!-- Device is typically /dev/ttyACM0; adjust if it enumerates differently.   -->
    <group if="$(var launch_gps)">
        <node pkg="ublox_gps" exec="ublox_gps_node" name="gps" output="screen">
            <param name="device" value="/dev/ttyACM0" />
            <param name="frame_id" value="gps" />
            <param name="uart1.baudrate" value="38400" />
            <param name="publish.nav.posllh" value="true" />
            <param name="publish.nav.status" value="true" />
            <param name="publish.nav.pvt" value="true" />
        </node>
    </group>

    <!-- ==================== RVIZ ==================== -->
    <group if="$(var launch_rviz)">
        <node pkg="rviz2" exec="rviz2" output="screen"
              args="-d $(var rviz_config_path)" />
    </group>

    <!-- ==================== TELEOP ==================== -->
    <group if="$(var use_joystick)">
        <node pkg="joy" exec="joy_node" name="joy_node" output="screen" />
        <node pkg="teleop_twist_joy" exec="teleop_node" name="teleop_twist_joy" output="screen">
            <param name="enable_button" value="4" />
            <param name="axis_linear.x" value="1" />
            <param name="axis_angular.yaw" value="3" />
            <param name="scale_linear.x" value="0.5" />
            <param name="scale_angular.yaw" value="1.0" />
        </node>
    </group>
    <group unless="$(var use_joystick)">
        <node pkg="teleop_twist_keyboard" exec="teleop_twist_keyboard" name="teleop_twist_keyboard"
              output="screen" launch-prefix="xterm -e" />
    </group>
</launch>
